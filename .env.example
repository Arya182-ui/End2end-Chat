# Firebase Configuration (Client-Side)
# Get these from Firebase Console: https://console.firebase.google.com
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_DATABASE_URL=https://your_project_id-default-rtdb.firebaseio.com
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Google Gemini AI (Client-Side)
# Get API key from: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Demo Mode (Set to true to use mock data without real API keys)
VITE_DEMO_MODE=false

# WebSocket Server URL (Update when deploying to production)
# For local development:
VITE_WS_URL=http://localhost:3001
# For production (replace with your actual server URL):
# VITE_WS_URL=https://your-server-domain.com

# Google AdSense (optional)
# VITE_ADSENSE_CLIENT_ID=ca-pub-xxxxxxxxxxxxxxxxx

# Google Analytics (optional)  
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX
