# Server Configuration
PORT=3001

# CORS - Client URL (production URL when deployed)
CLIENT_URL=http://localhost:5173

# Session Configuration
# SESSION_EXPIRY_TIME is handled in code (30 minutes default)

# Firebase Admin SDK (Server-Side)
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project_id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# Google Cloud Translation API (Server-Side)
# Get API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLOUD_TRANSLATE_KEY=your_translation_api_key_here

# Google Gemini AI (Server-Side - for moderation)
# Get API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Demo Mode (Set to true to use mock responses without real API keys)
DEMO_MODE=false
